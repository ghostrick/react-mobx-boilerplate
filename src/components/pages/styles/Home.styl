.container
  height 100vh
  display flex
  flex-direction column
  justify-content center
  align-items center
  h1
    color #444
    font-weight 900
    font-size 60px
    letter-spacing 5px
    position relative
    transform skewX(-5deg)

.link
  color #444
  margin 10px 0
  display flex
  align-items center
  text-decoration none
  position relative
  transition all .3s
  > span
    color #888
    font-size 35px
    font-weight 800
    letter-spacing 3px
  > svg
    fill #888
    width 50px
    height 50px
  &:after
    position absolute
    bottom 6px
    left -10px
    right -5px
    height 13px
    background rgba(0,0,0,.15)
    content ""
    z-index -1
  &:hover
    opacity .8

@media only screen and (max-width: 640px)
  .container
    h1
      font-size 38px

  .link
    > span
      font-size 25px
    > svg
      width 35px
      height 35px
    &:after
      bottom 4px
      height 12px
