.base--button
  cursor pointer
  box-shadow 10px 10px 10px rgba(50,50,50,.085)
  margin 10px
  width 120px
  border-radius 100px
  font-size 16px
  border solid 2px transparent
  transition all .3s
  a
    padding 10px 20px
    text-align center
    letter-spacing 3px
    display block

@media only screen and (max-width: 640px)
  .base--button
    margin 10px
    width 100px
    font-size 15px
    a
      padding 8px 16px
